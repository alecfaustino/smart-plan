generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String         @id @default(uuid())
  email        String         @unique
  name         String
  // TODO: add password hash in a future iteration
  createdAt    DateTime       @default(now())
  Tasks        Tasks[]
  UserSettings UserSettings[]
}

model Tasks {
  id            String    @id @default(uuid())
  title         String
  description   String?
  isCompleted   Boolean   @default(false)
  priority      Priority  @default(LOW)
  estimatedTime Int? // in minutes
  dueDate       DateTime?
  userId        String
  user          Users     @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
}

// For Tasks priority
enum Priority {
  LOW
  MEDIUM
  HIGH
}

model UserSettings {
  user_id         String @id @default(uuid())
  user            Users  @relation(fields: [user_id], references: [id])
  workWindowStart Int    @default(9) // in hours (24-hour format)
  workWindowEnd   Int    @default(17) // in hours (24-hour format
}
